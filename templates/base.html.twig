        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('paper') }}
        {% endblock %}
    </head>
    <header>
        <a class="logo-container" href="{{ path("app_home")}}">
            <img class="logo" src="{{asset("images/logo.png")}}" alt="">
        </a>
            <div id="anim-handle">
                <i class="bi bi-pause"></i>
            </div>
        <nav class="hidden">
            <img id="menu_icon_close" 
            class="menu-icon menu-icon-close" 
            src="{{asset("images/menu-croix.svg")}}" alt="">
            <ul class="list-container">
                <li><a class="nav-link" href="{{path("app_about")}}">Qui sommes-nous</a></li>
                <li><a class="nav-link" href="{{path("app_expertise")}}">Expertise</a></li>
                <li><a class="nav-link" href="{{path("app_urbanisme")}}">Documents d'urbanisme</a></li>
                {# <li><a class="nav-link" href="{{path("app_blog")}}">Guides</a></li> #}
                <li><a class="nav-link" href="https://studio-okai.com">Studio OKAÏ</a></li>

                
                <li class="btn-container"><a class="btn-contact-small" href="{{path('app_contact')}}">Contacter-nous</a></li>
            </ul>
            <div class="rs">
                    <a href="https://www.facebook.com/cabinetokai/">
                        <img src="{{asset("/images/facebook-white.svg")}}" alt="">
                    </a>
                    <a href="https://www.instagram.com/cabinet.okai/">
                        <img src="{{asset("/images/instagram-white.svg")}}" alt="">
                    </a>
            </div>
            <div class="bg-overlay"></div>
        </nav>
        <img id="menu_icon" class="menu-icon" src="{{asset("images/menu-burger.svg")}}" alt="">
    </header>

    <body {{ stimulus_controller('swup dispatchAnim') }}>
    
              {% include "/components/_canvas.html.twig" %}  
        <div id="swup" class="transition-main">
            <div class="swup-content" >
                {% block body %}{% endblock %}
            </div>
        </div>
    <footer id="footer">
        <div class="logo-container">
            <img src="{{asset("images/logo-footer.svg")}}" alt="">
        </div>
        <div class="container">
            
            <div class="text">
                <p>
                    <gras>Cabinet OKAÏ</gras>, votre référence en urbanisme en Guadeloupe.<br>
                     Études et conception de plans urbains.
                </p>
            </div>

            <ul class="links">
                    <li><a class="nav-link" href="{{path("app_about")}}">Qui sommes-nous</a></li>
                    <li><a class="nav-link" href="{{path("app_expertise")}}">Expertise</a></li>
                    <li><a class="nav-link" href="{{path("app_urbanisme")}}">Documents d'urbanisme</a></li>
                    <li class="temp-hidden"><a class=" nav-link" href="">Guides</a></li>
                    <li><a class="nav-link" href="https://studio-okai.com">Studio OKAÏ</a></li>
            </ul>

            <div class="contact">
                <p>Suivez-nous pour vous tenir informé de
                 nos offres et astuces !
                </p>
                 <div class="rs">
                    <a href="https://www.facebook.com/cabinetokai/">
                        <img src="{{asset("/images/facebook.svg")}}" alt="">
                    </a>
                    <a href="https://www.instagram.com/cabinet.okai/">
                        <img src="{{asset("/images/instagram.svg")}}" alt="">
                    </a>
                 </div>
                 <a href="{{path("app_urbanisme")}}" class="btn-contact-small">Contacter-nous</a>
            </div>
        </div>
        <div class="small-line"></div>
        <p>
            <a class="smalltext" href="#">Politique de confidentialité</a> 
            <a class="smalltext" href="#">Mentions légales</a>
        </p>
        <a class="smalltext" href="#">Site Cabinet Okaï - 2023</a>
    </footer>

    </body>
<script>
    //====================================
    //===SCRIPT MENU RESPONSIVE===========
    //====================================
    let menuIcon = document.querySelector("#menu_icon")
    let menuIconClose = document.querySelector("#menu_icon_close")
    let list = document.getElementsByTagName("li")
    let nav = document.querySelector("nav")
   
   window.addEventListener("load",showMobileMenu)
   window.addEventListener("resize",showMobileMenu)

    function showMobileMenu() {
       
        if (window.innerWidth <= 1265) {
            nav.classList.add("hidden")
            menuIcon.addEventListener("click",toggleNav)
            
            //fais disparaitre le menu après avoir cliqué sur le lien
            Array.from(list).forEach(element => {
                element.addEventListener("click",toggleNav)
            });

            menuIconClose.addEventListener("click",toggleNav)
          
        }else{
            nav.classList.remove("hidden")
        }
    }
    function toggleNav() {
        nav.classList.toggle("show")
    }

</script>

</html>

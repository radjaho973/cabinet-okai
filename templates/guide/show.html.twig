{% extends 'base.html.twig' %}

{% block title %}Guide{% endblock %}

{% block body %}
    <h1>Guide</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ guide.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ guide.titre }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ guide.auteur }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ guide.description }}</td>
            </tr>
            <tr>
                <th>ReadingTime</th>
                <td>{{ guide.readingTime }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ guide.image }}</td>
            </tr>
            <tr>
                <th>PublishAt</th>
                <td>{{ guide.publishAt ? guide.publishAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ guide.modifiedAt ? guide.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_guide_index') }}">back to list</a>

    <a href="{{ path('app_guide_edit', {'id': guide.id}) }}">edit</a>

    {{ include('guide/_delete_form.html.twig') }}
{% endblock %}
